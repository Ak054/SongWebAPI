@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="mb-3">
    <button class="btn btn-success" data-toggle="modal" data-target="#songForm">Post Songs</button>
</div>

<div class="row" id="songData">
    <div class="col-md-12">
        <h1 class="text-center">There is No Song Posted</h1>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="songForm">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Songs Info.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="title">Song Title: </label>
                        <input type="text" class="form-control" id="title" />
                        <input type="hidden" class="form-control" id="SongID">
                    </div>
                    <div class="form-group">
                        <label for="singer">Singer Name: </label>
                        <input type="text" class="form-control" id="singer">
                    </div>
                    <div class="form-group">
                        <label for="lyricist">Lyricist: </label>
                        <input type="text" class="form-control" id="lyricist">
                    </div>
                    <div class="form-group">
                        <label for="release_date">Release Date: </label>
                        <input type="date" class="form-control" id="release_date" />
                    </div>
                    <button type="button" id="btn" onclick="saveDetails()" class="btn btn-success btn-block">Save Song Details</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="messageDialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Message From Application</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="message"></p>
            </div>      
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            loadSongs();
        });
    </script>
}